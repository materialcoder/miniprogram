<view class="blog">
  <view class="blog-title">
    <image class="blog-portrait" src="{{blog.avatar}}"></image>
    <view class="blog-box">
      <view class="blog-nickName">{{blog.nickName}}</view>
      <view class="blog-time">{{_createTime}}</view>
    </view>
  </view>
  <view class="blog-content">{{blog.content}}</view>
  <view class="blog-img">
    <block wx:for="{{blog.img}}" wx:key="{{index}}">
      <!-- 绑定事件 bind 会存在事件冒泡 catch 不会 -->
      <image class="img" src="{{item}}" mode="aspectFill" catch:tap="onPreviewImage"
      data-imgsrc="{{item}}"
      data-imgs="{{blog.img}}"></image>
    </block>
  </view>
</view>